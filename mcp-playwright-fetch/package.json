{
  "name": "mcp-playwright-fetch",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that uses Playwright to fetch and render web pages to Markdown or JSON.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "test": "bun test:unit && bun test:integration",
    "test:unit": "bun vitest run --config vitest.config.ts",
    "test:integration": "bun vitest run --config vitest.integration.config.ts",
    "test:watch": "bun vitest",
    "test:ui": "bun vitest --ui",
    "test:coverage": "bun vitest run --coverage",
    "build": "tsc"
  },
  "keywords": [
    "mcp",
    "playwright",
    "fetch",
    "render",
    "markdown",
    "json"
  ],
  "author": "Roo",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@types/node": "^22.13.10",
    "cheerio": "^1.0.0",
    "html-to-md": "^0.8.6",
    "playwright": "^1.51.1"
  },
  "devDependencies": {
    "@vitest/ui": "^3.0.9",
    "c8": "^10.1.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.js",
    "index.ts",
    "index.js"
  ],
  "publishConfig": {
    "access": "public"
  }
}